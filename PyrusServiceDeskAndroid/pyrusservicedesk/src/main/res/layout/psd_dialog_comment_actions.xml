<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/psd_offset_small"
    android:paddingBottom="@dimen/psd_offset_small">

    <TextView
        android:id="@+id/retry"
        android:layout_width="match_parent"
        android:layout_height="@dimen/psd_recyclerview_item_height_default"
        app:layout_constraintBottom_toTopOf="@+id/delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="@dimen/psd_offset_default"
        android:paddingRight="@dimen/psd_offset_default"
        android:background="?attr/selectableItemBackground"
        android:textAppearance="?attr/textAppearanceListItem"
        android:text="@string/psd_retry"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/psd_recyclerview_item_height_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retry"
        android:paddingLeft="@dimen/psd_offset_default"
        android:paddingRight="@dimen/psd_offset_default"
        android:background="?attr/selectableItemBackground"
        android:textAppearance="?attr/textAppearanceListItem"
        android:gravity="center_vertical"
        android:text="@string/psd_delete"/>
</android.support.constraint.ConstraintLayout>